          <i class="fa fa-fw <%= active ? 'fa-check-circle' : 'fa-circle-o' %>"></i>
        </a>
        <a class="<%= active ? 'active' : '' %>" href="<%= onlyUrlFor(tag.slug, platforms, tags) %>">
          <i class="<%= tag.icon %>"></i>
          <%= tag.name %>
        </a>
      </div>
    <% }); %>
  </div>

  <!-- Licenses menu -->
